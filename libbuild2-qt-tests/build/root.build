config [uint64] config.libbuild2_qt_tests.qt

if! $defined(config.libbuild2_qt_tests.qt)
{
  if ($build.mode != 'skeleton')
    fail 'config.libbuild2_qt_tests.qt must be specified'
}
else
{
  if ($config.libbuild2_qt_tests.qt < 5 || $config.libbuild2_qt_tests.qt > 6)
    fail "config.libbuild2_qt_tests.qt value must be between 5 and 6"
}

cxx.std = latest

using cxx

hxx{*}: extension = hxx
ixx{*}: extension = ixx
txx{*}: extension = txx
cxx{*}: extension = cxx

# Assume headers are importable unless stated otherwise.
#
hxx{*}: cxx.importable = true

# Every exe{} in this project is by default a test.
#
exe{*}: test = true

# The test target for cross-testing (running tests under Wine, etc).
#
test.target = $cxx.target
